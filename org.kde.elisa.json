{
    "id": "org.kde.elisa",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "elisa",
    "rename-icon": "elisa",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host:ro",
        "--socket=pulseaudio",
        "--device=dri",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--own-name=org.mpris.MediaPlayer2.elisa"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "*.la",
        "*.a"
    ],
    "cleanup-commands": [
        "rm -f /app/lib/vlc/plugins/plugins.dat",
        "/app/lib/vlc/vlc-cache-gen /app/lib/vlc/plugins"
    ],
    "modules": [
        {
            "config-opts": [
                "BUILDCC=gcc",
                "--disable-lua",
                "--disable-a52",
                "--disable-qt",
                "--disable-ncurses",
                "--disable-udev"
            ],
            "name": "libvlc",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://get.videolan.org/vlc/3.0.20/vlc-3.0.20.tar.xz",
                    "sha256": "adc7285b4d2721cddf40eb5270cada2aaa10a334cb546fd55a06353447ba29b5",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6504,
                        "stable-only": true,
                        "url-template": "https://get.videolan.org/vlc/$version/vlc-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "vlc-ignore-time-for-cache.patch"
                }
            ]
        },
        {
            "name": "lmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_0.9.33/openldap-LMDB_0.9.33.tar.gz",
                    "sha256": "476801f5239c88c7de61c3390502a5d13965ecedef80105b5fb0fcb8373d1e53",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6974,
                        "stable-only": true,
                        "url-template": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_$version/openldap-LMDB_$version.tar.gz"
                    }
                }
            ],
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "subdir": "libraries/liblmdb"
        },
        {
            "name": "elisa",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.05.1/src/elisa-24.05.1.tar.xz",
                    "sha256": "55ed76a676af42c3af455f64a7f63f51a3fbaa619c92d345be6708ad5cdc77e2",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 17780,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/elisa-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
