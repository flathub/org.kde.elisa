{
    "id": "org.kde.elisa",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "elisa",
    "rename-icon": "elisa",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host:ro",
        "--socket=pulseaudio",
        "--device=dri",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--talk-name=org.kde.baloo",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--own-name=org.mpris.MediaPlayer2.elisa",
        "--env=BALOO_DB_PATH=.local/share/baloo"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "*.la",
        "*.a"
    ],
    "cleanup-commands": [
        "rm -f /app/lib/vlc/plugins/plugins.dat",
        "/app/lib/vlc/vlc-cache-gen /app/lib/vlc/plugins"
    ],
    "modules": [
        {
            "config-opts": [
                "BUILDCC=gcc",
                "--disable-lua",
                "--disable-a52",
                "--disable-qt",
                "--disable-ncurses",
                "--disable-udev"
            ],
            "name": "libvlc",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://get.videolan.org/vlc/3.0.18/vlc-3.0.18.tar.xz",
                    "sha256": "57094439c365d8aa8b9b41fa3080cc0eef2befe6025bb5cef722accc625aedec",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6504,
                        "stable-only": true,
                        "url-template": "https://get.videolan.org/vlc/$version/vlc-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "vlc-ignore-time-for-cache.patch"
                },
                {
                    "type": "patch",
                    "path": "vlc-fix-flac-skipping.patch"
                }
            ]
        },
        {
            "name": "lmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_0.9.31/openldap-LMDB_0.9.31.tar.gz",
                    "sha256": "d35d4f6f46313d62fd342c9dcbf574432919ce5e802d2b6cbe2ebd549821e5c4",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6974,
                        "stable-only": true,
                        "url-template": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_$version/openldap-LMDB_$version.tar.gz"
                    }
                }
            ],
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "subdir": "libraries/liblmdb"
        },
        {
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ],
            "name": "baloo",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.108/baloo-5.108.0.tar.xz",
                    "sha256": "032129dbd9aba7b624fef8796c406fd797c98d93b0cbb6ac5a80ee4232b4c5d8",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/baloo-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "elisa",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/23.04.3/src/elisa-23.04.3.tar.xz",
                    "sha256": "421032a33e072303097918fc3f82a86118e9d0ae6adce812ee61307e24acc4e7",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 368663,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/unstable/release-service/$version/src/elisa-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
